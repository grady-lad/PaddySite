extends ../layout
block backbone
  script.
    requirejs(['initFront']);
  div#intialContent
    = photos
  div.app
    .loading
  script(id = "illustrationTemplate", type = "text/x-handlebars")
    if photos
    <div class = "col-md-4 centerIll">
    <a href="#" class="singleIllLink">
    | {{#if croppedImage}}
    <img id= "{{image.public_id}}" class="img-responsive img-fade multipleIll" src="{{croppedImage}}"/>
    | {{else}}
    <img  id= "{{image.public_id}}" class="img-responsive img-fade multipleIll" src="{{image.fill_url}}"/>
    | {{/if}}
    </a>
    </div>
    
  script(id = "singleIllustrationTemplate", type = "text/x-handlebars")
    <div class = "col-md-12 singleHolder">
    <img class="img-responsive img-centre singleIll"src="{{image.url}}"/>
    <div class="prevUrl">
    <img class="img-responsive" src="https://s3-eu-west-1.amazonaws.com/paddystaging/Gallery-Arrow-left.png"/>
    </div>
    <div class="nextUrl">
    <img class="img-responsive" src="https://s3-eu-west-1.amazonaws.com/paddystaging/Gallery-Arrow-Right.png"/>
    </div>
    </div> 
  
