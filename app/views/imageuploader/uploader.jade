extends ../layout
block content
  - function isObjectEmpty(obj){
  -     var name;
  -     for(name in obj){
  -         return false;
  -     }
  -     return true;
  - }
  -   if (isObjectEmpty(message) == false)
    p #{message}
  .col-md-4
    h1 control panel
    form(action="/imagepanel", method="POST", enctype="multipart/form-data")
      input(type="file", name='image')
      input(type="submit", value="Upload Image")
    form(action="/removeImage", method="POST", enctype="multipart/form-data")
      .form-group
        button.btn.btn-warning(type="submit", name='remove') remove Image
   .col-md-8
     if photos.length
      - for (var j = 0; j < photos.length; j++)
          if (j == 0 || j % 3 == 0)
            .row
              - for (var i = j; i < (3 + j); i++ )
                - if (i >= photos.length) break;
                  .col-md-4.remove-image
                    img(src="#{photos[i].image.url}" height="200" width="200")
                    form(action="/removeImage", method="POST", enctype="multipart/form-data")
                      input(type="hidden" value="#{photos[i].image.public_id}" name="imgId")
                      input.remove(type="submit" value="Remove")
                  
     else
       h3.text-muted No images uploaded yet.