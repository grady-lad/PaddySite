extends ../loginLayout
block content
  .col-sm-6.col-sm-offset-3
    h1
      span.fa.fa-sign-in Login
    if (message.length > 0)
      .alert.alert-message #{message}
    form#login(
      method="post"
      name="login"
      action="/login"
      enctype="application/x-www-form-urlencoded"
    )
      .form-group
        label Email
        input.form-control#loginemail(
          type="text"
          name="email"
         )
      .form-group
        label Password
        input.form-control#password(
          type="password"
          name="password"
         )
         
        button.btn.btn-warning.btn-lg(
          type="submit"
          value="Login"
        ) Login