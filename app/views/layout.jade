doctype html
html
  head
    script(src='/googleAnalytics.js')
    title Paddhuiy Illustration - #{title}
    link(rel="icon", type="image/png", href="https://s3-eu-west-1.amazonaws.com/paddystaging/Favicon16.png")
    link(rel='stylesheet', href='/css/style.min.css')
    meta(name='viewport', content='width=device-width', initial-scale='1')
    .row.logo_and_navbar
      .col-md-12
        nav.navbar.navbar-default(role = "navigation")
          .container
            .navbar-header
              button.navbar-toggle.collapsed(type = "button" data-toggle = "collapse" data-target = "#navbar-collapse-eg")
                span.sr-only Toggle Navigation
                span.icon-bar
                span.icon-bar
                  span.icon-bar
              a.navbar-brand(href = "/")
                img.img-responsive.nav-logo(src="https://s3-eu-west-1.amazonaws.com/paddystaging/Logo1.png")
            .collapse.navbar-collapse#navbar-collapse-eg
              ul.nav.navbar-nav.navbar-right.custom-down
                li#gallery
                  a.nav-text(href="/gallery") ILLUSTRATION
                li#about
                  a.nav-text(href="/about") ABOUT
                li#blog
                  a.nav-text(href="/blog") BLOG
                li#contact
                  a.nav-text(href="/contact") CONTACT
   body
     .container
      #wrapper
        #switch-content
          block content
          script(src='/lib/require.js', data-main='/require.config.js')
          block backbone
     .container
       .footer
         .row#social
           a(href ="http://paddhuiy.tumblr.com")
             img.img-responisve(src="https://s3-eu-west-1.amazonaws.com/paddystaging/TumblrBadge.png")
           a(href ="https://instagram.com/paddhuiy/")
             img.img-responisve(src="https://s3-eu-west-1.amazonaws.com/paddystaging/InstaBadge.png")
           a(href ="https://twitter.com/paddhuiy")
             img.img-responisve(src="https://s3-eu-west-1.amazonaws.com/paddystaging/TwitterBadge.png")
         .row
             p.Super-Effective Copyright Paddhuiy Illustration 2015
             p.Super-Effective.mog Developed by Martin O'Grady
